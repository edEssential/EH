<div class="formText formFade">
	<p class="formHeader">Sign up</p>
	<div class="form">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  			<%= devise_error_messages! %>

  			<%= f.label :email, class: 'formField' %>
  			<%= f.email_field :email, :autofocus => true, class: 'formFieldT2' %><br />

  			<%= f.label :password, class: 'formField' %>
  			<%= f.password_field :password, class: 'formFieldT2' %><br />

  			<%= f.label :password_confirmation, class: 'formField' %>
  			<%= f.password_field :password_confirmation, class: 'formFieldT2' %><br /><br />

  			<div><%= f.submit "Sign up" %></div>
		<% end %>
	</div>
</div>
